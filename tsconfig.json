{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "atoma-history": [
        "packages/atoma-history/src/index.ts"
      ],
      "atoma-history/*": [
        "packages/atoma-history/src/*"
      ],
      "atoma-sync": [
        "packages/atoma-sync/src/index.ts"
      ],
      "atoma-sync/*": [
        "packages/atoma-sync/src/*"
      ],
      "atoma-react": [
        "packages/atoma-react/src/index.ts"
      ],
      "atoma-react/*": [
        "packages/atoma-react/src/*"
      ],
      "atoma": [
        "packages/atoma/src/index.ts"
      ],
      "atoma-client": [
        "packages/atoma-client/src/index.ts"
      ],
      "atoma-core": [
        "packages/atoma-core/src/index.ts"
      ],
      "atoma-core/internal": [
        "packages/atoma-core/src/internal.ts"
      ],
      "atoma-runtime": [
        "packages/atoma-runtime/src/index.ts"
      ],
      "atoma-runtime/*": [
        "packages/atoma-runtime/src/*"
      ],
      "atoma-shared": [
        "packages/atoma-shared/src/index.ts"
      ],
      "atoma-shared/*": [
        "packages/atoma-shared/src/*"
      ],
      "atoma-observability": [
        "packages/atoma-observability/src/index.ts"
      ],
      "atoma-observability/*": [
        "packages/atoma-observability/src/*"
      ],
      "atoma-protocol": [
        "packages/atoma-protocol/src/index.ts"
      ],
      "atoma-protocol/*": [
        "packages/atoma-protocol/src/*"
      ],
      "#client": [
        "packages/atoma-client/src/index.ts"
      ],
      "#client/*": [
        "packages/atoma-client/src/*"
      ],
      "#sync/*": [
        "packages/atoma-sync/src/*"
      ]
    },
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx"
  },
  "include": [
    "packages/atoma/src/**/*",
    "packages/atoma-client/src/**/*",
    "packages/atoma-core/src/**/*",
    "packages/atoma-runtime/src/**/*",
    "packages/atoma-shared/src/**/*",
    "packages/atoma-protocol/src/**/*",
    "packages/atoma-observability/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
