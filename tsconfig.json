{
  "extends": "./tsconfig.paths.root.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx"
  },
  "include": [
    "packages/atoma/src/**/*",
    "packages/atoma-client/src/**/*",
    "packages/atoma-core/src/**/*",
    "packages/atoma-runtime/src/**/*",
    "packages/atoma-shared/src/**/*",
    "packages/atoma-protocol/src/**/*",
    "packages/plugins/atoma-observability/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
