{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#core": [
        "src/core/index.ts"
      ],
      "#observability": [
        "src/observability/index.ts"
      ],
      "#protocol": [
        "src/protocol/index.ts"
      ],
      "#batch": [
        "src/batch/index.ts"
      ]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
