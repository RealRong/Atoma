{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "atoma-sync": [
        "packages/atoma-sync/src/index.ts"
      ],
      "atoma-sync/*": [
        "packages/atoma-sync/src/*"
      ],
      "atoma-react": [
        "packages/atoma-react/src/index.ts"
      ],
      "atoma-react/*": [
        "packages/atoma-react/src/*"
      ],
      "atoma": [
        "packages/atoma/src/index.ts"
      ],
      "atoma/client": [
        "packages/atoma/src/client/index.ts"
      ],
      "atoma/core": [
        "packages/atoma/src/core/index.ts"
      ],
      "atoma/core/*": [
        "packages/atoma/src/core/*"
      ],
      "atoma/shared": [
        "packages/atoma/src/shared/index.ts"
      ],
      "atoma/shared/*": [
        "packages/atoma/src/shared/*"
      ],
      "atoma/observability": [
        "packages/atoma/src/observability/index.ts"
      ],
      "atoma/observability/*": [
        "packages/atoma/src/observability/*"
      ],
      "atoma/protocol": [
        "packages/atoma/src/protocol/index.ts"
      ],
      "atoma/protocol/*": [
        "packages/atoma/src/protocol/*"
      ],
      "atoma/backend": [
        "packages/atoma/src/backend/index.ts"
      ],
      "atoma/backend/*": [
        "packages/atoma/src/backend/*"
      ],
      "#client": [
        "packages/atoma/src/client/index.ts"
      ],
      "#client/*": [
        "packages/atoma/src/client/*"
      ],
      "#core": [
        "packages/atoma/src/core/index.ts"
      ],
      "#core/*": [
        "packages/atoma/src/core/*"
      ],
      "#shared": [
        "packages/atoma/src/shared/index.ts"
      ],
      "#shared/*": [
        "packages/atoma/src/shared/*"
      ],
      "#observability": [
        "packages/atoma/src/observability/index.ts"
      ],
      "#observability/*": [
        "packages/atoma/src/observability/*"
      ],
      "#protocol": [
        "packages/atoma/src/protocol/index.ts"
      ],
      "#protocol/*": [
        "packages/atoma/src/protocol/*"
      ],
      "#backend": [
        "packages/atoma/src/backend/index.ts"
      ],
      "#backend/*": [
        "packages/atoma/src/backend/*"
      ],
      "#sync/*": [
        "packages/atoma-sync/src/*"
      ],
      "#devtools": [
        "packages/atoma/src/devtools/index.ts"
      ]
    },
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx"
  },
  "include": [
    "packages/atoma/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
