{
    "name": "atoma",
    "version": "1.0.0",
    "type": "module",
    "description": "Atomic state management with universal persistence - built on Jotai and Immer",
    "main": "dist/index.mjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.mts",
    "exports": {
        ".": {
            "types": "./dist/index.d.mts",
            "import": "./dist/index.mjs"
        },
        "./react": {
            "types": "./dist/react/index.d.mts",
            "import": "./dist/react/index.mjs"
        },
        "./adapters": {
            "types": "./dist/adapters/index.d.mts",
            "import": "./dist/adapters/index.mjs"
        },
        "./server": {
            "types": "./dist/server/index.d.mts",
            "import": "./dist/server/index.mjs"
        },
        "./server/adapters": {
            "types": "./dist/server/adapters.d.mts",
            "import": "./dist/server/adapters.mjs"
        },
        "./server/adapters/typeorm": {
            "types": "./dist/server/adapters/typeorm.d.mts",
            "import": "./dist/server/adapters/typeorm.mjs"
        },
        "./server/adapters/prisma": {
            "types": "./dist/server/adapters/prisma.d.mts",
            "import": "./dist/server/adapters/prisma.mjs"
        }
    },
    "imports": {
        "#core": {
            "types": "./dist/core/index.d.mts",
            "import": "./dist/core/index.mjs"
        },
        "#observability": {
            "types": "./dist/observability/index.d.mts",
            "import": "./dist/observability/index.mjs"
        },
        "#protocol": {
            "types": "./dist/protocol/index.d.mts",
            "import": "./dist/protocol/index.mjs"
        },
        "#batch": {
            "types": "./dist/batch/index.d.mts",
            "import": "./dist/batch/index.mjs"
        }
    },
    "files": [
        "dist",
        "src",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "vite --config demo/vite.config.ts",
        "dev:lib": "tsup --watch",
        "build:demo": "vite build --config demo/vite.config.ts",
        "typecheck": "tsc --noEmit",
        "test": "vitest run",
        "test:ui": "vitest --ui",
        "start:docs": "npm run dev --prefix atoma-docs"
    },
    "keywords": [
        "react",
        "jotai",
        "immer",
        "state-management",
        "atomic",
        "persistence",
        "indexeddb",
        "offline-first",
        "sync",
        "hybrid-cache"
    ],
    "author": "Rendevoz Team",
    "license": "MIT",
    "peerDependencies": {
        "immer": "^9.0.0 || ^10.0.0",
        "jotai": "^2.0.0",
        "react": "^18.0.0",
        "typeorm": "^0.3.20",
        "@prisma/client": "^5.0.0"
    },
    "peerDependenciesMeta": {
        "typeorm": {
            "optional": true
        },
        "@prisma/client": {
            "optional": true
        }
    },
    "dependencies": {
        "lodash": "^4.17.21",
        "p-limit": "^7.2.0"
    },
    "devDependencies": {
        "@testing-library/react": "^14.3.1",
        "@types/lodash": "^4.14.0",
        "@types/node": "^20.0.0",
        "@types/react": "^18.0.0",
        "@vitejs/plugin-react": "^4.2.1",
        "immer": "^9.0.0 || ^10.0.0",
        "jotai": "^2.0.0",
        "jsdom": "^25.0.0",
        "react": "^18.0.0",
        "react-dom": "^18.2.0",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.3.20",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0",
        "vite": "^5.2.0",
        "vitest": "^1.0.0"
    },
    "optionalDependencies": {
        "dexie": "^3.2.0 || ^4.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/rendevoz/rendevoz",
        "directory": "packages/atoma"
    },
    "bugs": {
        "url": "https://github.com/rendevoz/rendevoz/issues"
    },
    "homepage": "https://github.com/rendevoz/rendevoz/tree/main/packages/atoma#readme"
}
