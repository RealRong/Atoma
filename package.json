{
    "name": "atoma",
    "version": "1.0.0",
    "type": "module",
    "description": "Atomic state management with universal persistence - built on Jotai and Immer",
    "workspaces": [
        "docs",
        "devtools",
        "demo/server",
        "packages/*"
    ],
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./client": {
            "types": "./dist/client/index.d.ts",
            "import": "./dist/client/index.js"
        },
        "./devtools": {
            "types": "./dist/devtools/index.d.ts",
            "import": "./dist/devtools/index.js"
        },
        "./react": {
            "types": "./dist/react/index.d.ts",
            "import": "./dist/react/index.js"
        },
        "./core": {
            "types": "./dist/core/index.d.ts",
            "import": "./dist/core/index.js"
        },
        "./shared": {
            "types": "./dist/shared/index.d.ts",
            "import": "./dist/shared/index.js"
        },
        "./observability": {
            "types": "./dist/observability/index.d.ts",
            "import": "./dist/observability/index.js"
        },
        "./protocol": {
            "types": "./dist/protocol/index.d.ts",
            "import": "./dist/protocol/index.js"
        },
        "./backend": {
            "types": "./dist/backend/index.d.ts",
            "import": "./dist/backend/index.js"
        },
        "./server": {
            "types": "./dist/server/index.d.ts",
            "import": "./dist/server/index.js"
        },
        "./server/adapters": {
            "types": "./dist/server/adapters.d.ts",
            "import": "./dist/server/adapters.js"
        },
        "./server/adapters/typeorm": {
            "types": "./dist/server/adapters/typeorm.d.ts",
            "import": "./dist/server/adapters/typeorm.js"
        },
        "./server/adapters/prisma": {
            "types": "./dist/server/adapters/prisma.d.ts",
            "import": "./dist/server/adapters/prisma.js"
        }
    },
    "imports": {
        "#core": {
            "types": "./dist/core/index.d.ts",
            "import": "./dist/core/index.js"
        },
        "#shared": {
            "types": "./dist/shared/index.d.ts",
            "import": "./dist/shared/index.js"
        },
        "#observability": {
            "types": "./dist/observability/index.d.ts",
            "import": "./dist/observability/index.js"
        },
        "#protocol": {
            "types": "./dist/protocol/index.d.ts",
            "import": "./dist/protocol/index.js"
        },
        "#backend": {
            "types": "./dist/backend/index.d.ts",
            "import": "./dist/backend/index.js"
        }
    },
    "files": [
        "dist",
        "src",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsup",
        "dev:lib": "tsup --watch",
        "demo:web": "vite --config demo/web/vite.config.ts",
        "demo:server": "npm -w atoma-demo-server run dev",
        "typecheck": "tsc --noEmit",
        "test": "vitest run",
        "test:ui": "vitest --ui",
        "start:docs": "npm run dev --prefix docs"
    },
    "keywords": [
        "react",
        "jotai",
        "immer",
        "state-management",
        "atomic",
        "persistence",
        "indexeddb",
        "offline-first",
        "sync",
        "hybrid-cache"
    ],
    "author": "Rendevoz Team",
    "license": "MIT",
    "peerDependencies": {
        "@prisma/client": "^5.0.0",
        "immer": "^9.0.0 || ^10.0.0",
        "jotai": "^2.0.0",
        "react": "^18.0.0 || ^19.0.0",
        "typeorm": "^0.3.20"
    },
    "peerDependenciesMeta": {
        "typeorm": {
            "optional": true
        },
        "@prisma/client": {
            "optional": true
        }
    },
    "dependencies": {
        "lodash": "^4.17.21",
        "mitt": "^3.0.1",
        "p-limit": "^7.2.0",
        "zod": "^4.2.1"
    },
    "devDependencies": {
        "@testing-library/react": "^16.3.1",
        "@types/lodash": "^4.14.0",
        "@types/node": "^24.10.0",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "@vitejs/plugin-react": "^5.1.2",
        "immer": "^9.0.0 || ^10.0.0",
        "jotai": "^2.0.0",
        "jsdom": "^25.0.0",
        "mitt": "^3.0.1",
        "p-retry": "^7.1.1",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "reflect-metadata": "^0.1.13",
        "tsup": "^8.0.0",
        "typeorm": "^0.3.20",
        "typescript": "^5.9.3",
        "vite": "^7.2.0",
        "vitest": "^4.0.16",
        "xstate": "^5.25.1"
    },
    "optionalDependencies": {
        "dexie": "^3.2.0 || ^4.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/rendevoz/rendevoz",
        "directory": "packages/atoma"
    },
    "bugs": {
        "url": "https://github.com/rendevoz/rendevoz/issues"
    },
    "homepage": "https://github.com/rendevoz/rendevoz/tree/main/packages/atoma#readme"
}
