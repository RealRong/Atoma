{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "noEmit": true,
        "resolvePackageJsonImports": true,
        "resolvePackageJsonExports": true,
        "customConditions": ["source"],
        "paths": {
            "#shared": ["src/index.ts"],
            "#shared/*": ["src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
