{
    "name": "atoma-client",
    "version": "0.0.0",
    "type": "module",
    "description": "Atoma client runtime and plugins",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "source": "./src/index.ts"
        }
    },
    "imports": {
        "#client": "./src/index.ts",
        "#client/*": "./src/*"
    },
    "scripts": {
        "build": "tsup",
        "typecheck": "tsc -p tsconfig.json --noEmit"
    },
    "dependencies": {
        "atoma-core": "workspace:*",
        "atoma-shared": "workspace:*",
        "atoma-protocol": "workspace:*",
        "atoma-observability": "workspace:*"
    },
    "peerDependencies": {
        "immer": "^9.0.0 || ^10.0.0",
        "jotai": "^2.0.0"
    }
}
