{
    "name": "atoma",
    "version": "1.0.0",
    "type": "module",
    "description": "Atomic state management with universal persistence",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "tsup",
        "dev:lib": "tsup --watch",
        "typecheck": "tsc -p tsconfig.json --noEmit"
    },
    "dependencies": {
        "atoma-client": "workspace:*",
        "atoma-types": "workspace:*"
    },
    "peerDependencies": {
        "immer": "^9.0.0 || ^10.0.0"
    }
}
