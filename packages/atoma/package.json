{
    "name": "atoma",
    "version": "1.0.0",
    "type": "module",
    "description": "Atomic state management with universal persistence - built on Jotai and Immer",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "tsup",
        "dev:lib": "tsup --watch",
        "typecheck": "tsc -p tsconfig.json --noEmit"
    },
    "dependencies": {
        "atoma-client": "workspace:*",
        "atoma-core": "workspace:*",
        "atoma-shared": "workspace:*",
        "atoma-protocol": "workspace:*",
        "atoma-observability": "workspace:*",
        "lodash": "^4.17.21",
        "mitt": "^3.0.1",
        "p-limit": "^7.2.0",
        "zod": "^4.2.1"
    },
    "peerDependencies": {
        "@prisma/client": "^5.0.0",
        "immer": "^9.0.0 || ^10.0.0",
        "jotai": "^2.0.0",
        "react": "^18.0.0 || ^19.0.0",
        "typeorm": "^0.3.20"
    },
    "peerDependenciesMeta": {
        "typeorm": {
            "optional": true
        },
        "@prisma/client": {
            "optional": true
        }
    }
}
