{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "atoma": ["src/index.ts"],
            "atoma/client": ["src/client/index.ts"],
            "atoma/core": ["src/core/index.ts"],
            "atoma/core/*": ["src/core/*"],
            "atoma/shared": ["src/shared/index.ts"],
            "atoma/shared/*": ["src/shared/*"],
            "atoma/observability": ["src/observability/index.ts"],
            "atoma/observability/*": ["src/observability/*"],
            "atoma/protocol": ["src/protocol/index.ts"],
            "atoma/protocol/*": ["src/protocol/*"],
            "atoma/backend": ["src/backend/index.ts"],
            "atoma/backend/*": ["src/backend/*"],

            "#client": ["src/client/index.ts"],
            "#client/*": ["src/client/*"],
            "#core": ["src/core/index.ts"],
            "#core/*": ["src/core/*"],
            "#shared": ["src/shared/index.ts"],
            "#shared/*": ["src/shared/*"],
            "#observability": ["src/observability/index.ts"],
            "#observability/*": ["src/observability/*"],
            "#protocol": ["src/protocol/index.ts"],
            "#protocol/*": ["src/protocol/*"],
            "#backend": ["src/backend/index.ts"],
            "#backend/*": ["src/backend/*"]
        },
        "resolvePackageJsonImports": true,
        "customConditions": ["source"],
        "jsx": "react-jsx",
        "noEmit": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
