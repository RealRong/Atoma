{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "atoma": ["src/index.ts"],
            "atoma/client": ["src/client/index.ts"],
            "atoma/core": ["src/core/index.ts"],
            "atoma/shared": ["src/shared/index.ts"],
            "atoma-client": ["../atoma-client/src/index.ts"],
            "atoma-core": ["../atoma-core/src/index.ts"],
            "atoma-shared": ["../atoma-shared/src/index.ts"],
            "atoma-shared/*": ["../atoma-shared/src/*"],
            "atoma/observability": ["src/observability/index.ts"],
            "atoma/observability/*": ["src/observability/*"],
            "atoma-observability": ["../atoma-observability/src/index.ts"],
            "atoma-observability/*": ["../atoma-observability/src/*"],
            "atoma/protocol": ["src/protocol/index.ts"],
            "atoma-protocol": ["../atoma-protocol/src/index.ts"],
            "atoma-protocol/*": ["../atoma-protocol/src/*"],
            "atoma/backend": ["src/backend/index.ts"],
            "atoma/backend/*": ["src/backend/*"],

            "#backend": ["src/backend/index.ts"],
            "#backend/*": ["src/backend/*"]
        },
        "resolvePackageJsonImports": true,
        "customConditions": ["source"],
        "jsx": "react-jsx",
        "noEmit": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
