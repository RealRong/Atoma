{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "useDefineForClassFields": false,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "atoma": [
                "../../src"
            ],
            "atoma/*": [
                "../../src/*"
            ],
            "atoma/server": [
                "../../src/server"
            ],
            "atoma/adapters": [
                "../../src/adapters"
            ],
            "typeorm": [
                "./node_modules/typeorm"
            ]
        }
    },
    "include": [
        "src",
        "vite.config.ts"
    ]
}
