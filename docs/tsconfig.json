{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "atoma": ["../packages/atoma/dist/index"],
      "atoma-react": ["../packages/atoma-react/src/index.ts"],
      "atoma/core": ["../packages/atoma/src/core/index.ts"],
      "atoma/core/*": ["../packages/atoma/src/core/*"],
      "atoma/protocol": ["../packages/atoma/src/protocol/index.ts"],
      "atoma/protocol/*": ["../packages/atoma/src/protocol/*"],
      "#core": ["../packages/atoma/src/core/index.ts"],
      "#core/*": ["../packages/atoma/src/core/*"],
      "#shared": ["../packages/atoma/src/shared/index.ts"],
      "#shared/*": ["../packages/atoma/src/shared/*"],
      "#observability": ["../packages/atoma/src/observability/index.ts"],
      "#observability/*": ["../packages/atoma/src/observability/*"],
      "#protocol": ["../packages/atoma/src/protocol/index.ts"],
      "#protocol/*": ["../packages/atoma/src/protocol/*"],
      "#backend": ["../packages/atoma/src/backend/index.ts"],
      "#backend/*": ["../packages/atoma/src/backend/*"],
      "atoma/server": ["../packages/atoma/dist/server/index"],
      "fumadocs-mdx:collections/*": [".source/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
